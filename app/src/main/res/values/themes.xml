<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobilHorgasz" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item> <!-- Narancssárga szín a fő színhez -->
        <item name="colorAccent">@color/orange</item> <!-- Narancssárga szín a kiegészítő színekhez -->

        <!-- Gombok háttérszínének beállítása -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MobilHorgasz" parent="Base.Theme.MobilHorgasz" />

    <!-- Gomb egyedi stílusa -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/orange</item> <!-- Gomb háttérszíne narancssárga -->
        <item name="android:textColor">@color/white</item> <!-- Gomb szövege fehér -->
    </style>

</resources>
